{
  "name": "mastering-nextjs",
  "description": "The complete video course on Next.js.",
  "version": "0.0.0",
  "author": {
    "name": "Lee Robinson",
    "email": "me@leerob.io",
    "url": "https://leerob.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leerob/mastering-nextjs.git"
  },
  "scripts": {
    "build": "next build",
    "dev": "next",
    "imageoptim": "yarn imageoptim:gif && yarn imageoptim:jpg && yarn imageoptim:png",
    "imageoptim:gif": "imageoptim \"static/**/*.gif\"",
    "imageoptim:jpg": "imageoptim \"static/**/*.jpg\"",
    "imageoptim:png": "imageoptim --no-imageoptim --imagealpha \"static/**/*.png\"",
    "lint": "eslint . --ext .json --ext .js",
    "prettier": "prettier --write \"**/*.{html,js,json,md,mdx,mjs,yml}\"",
    "start": "next start",
    "test": "yarn lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,js,json,md,mdx,mjs,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.gif": [
      "imageoptim",
      "git add"
    ],
    "*.jpg": [
      "imageoptim",
      "git add"
    ],
    "*.png": [
      "imageoptim --no-imageoptim --imagealpha",
      "git add"
    ]
  },
  "dependencies": {
    "@mapbox/rehype-prism": "0.4.0",
    "@mdx-js/mdx": "1.6.1",
    "@mdx-js/tag": "0.20.3",
    "comma-number": "2.0.1",
    "date-fns": "1.30.1",
    "framer-motion": "1.11.0",
    "globby": "^11.0.0",
    "isomorphic-unfetch": "3.0.0",
    "next": "9.4.1",
    "next-seo": "^4.5.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-intersection-observer": "8.26.2",
    "react-syntax-highlighter": "12.2.1",
    "react-tweet-embed": "^1.2.2",
    "styled-components": "5.1.0",
    "styled-reset": "4.1.4",
    "swr": "^0.2.0",
    "title": "3.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@zeit/next-mdx": "1.2.0",
    "babel-plugin-inline-react-svg": "1.1.1",
    "babel-plugin-styled-components": "1.10.7",
    "eslint": "7.0.0",
    "eslint-config-get-off-my-lawn": "^5.0.1",
    "husky": "4.2.5",
    "imageoptim-cli": "3.0.2",
    "lint-staged": "10.1.7",
    "prettier": "2.0.5"
  }
}
